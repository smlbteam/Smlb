<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 黑底白字 Menu 溢出菜单 -->
    <style name="DarkPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="SpinnerSelectorText">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableRight">@drawable/anim_rotate_arrow</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- MaterialDrawer Theme-->
    <style name="MainActivityCustomTheme" parent="AppTheme">
        <item name="material_drawer_background">@color/colorPrimary</item>
        <item name="material_drawer_primary_text">@color/text_white</item>
        <item name="material_drawer_primary_icon">@color/colorPrimary</item>
        <item name="material_drawer_secondary_text">@color/text_white</item>
        <item name="material_drawer_selected">@color/colorPrimaryDark</item>
        <item name="material_drawer_selected_text">@color/colorAccent</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
    </style>

</resources>
